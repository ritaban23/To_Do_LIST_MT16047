[version]
Signature="$WINDOWS NT$"
Class=hdc
ClassGuid={4D36E96A-E325-11CE-BFC1-08002BE10318}
Provider=%INTEL%
CatalogFile=ESB2ide.cat
DriverVer=06/28/2008, 9.1.1.1003

[SourceDisksNames] 
[SourceDisksFiles]
 
[PackageInfo]
Condition=InstalledDriverSection(pciide_Inst)

[ControlFlags]
ExcludeFromSelect=*

[Manufacturer]
%INTEL%=INTEL_HDC,NTamd64

[INTEL_HDC]
%PCI\VEN_8086&DEV_2680.DeviceDesc%=pciide_Inst, PCI\VEN_8086&DEV_2680     
%PCI\VEN_8086&DEV_269E.DeviceDesc%=pciide_Inst, PCI\VEN_8086&DEV_269E   

